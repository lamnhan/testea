{
  "name": "@lamnhan/testea",
  "version": "1.0.0",
  "description": "Rewiring, mocking & stubbing for testea modules in Node.",
  "author": "Lam Nhan",
  "homepage": "https://lamnhan.com",
  "license": "MIT",
  "main": "src/public-api.js",
  "typings": "src/public-api.d.ts",
  "bin": {
    "testea": "src/bin.js"
  },
  "files": [
    "src",
    "!**/*.ts",
    "**/*.d.ts"
  ],
  "scripts": {
    "compile": "tsc",
    "build": "npm run compile && npm i -g",
    "docs": "ayedocs generate",
    "test": "npm run compile && nyc --cache false mocha test/**/*.js",
    "coverage": "nyc --cache false report --reporter=text-lcov | coveralls",
    "lint": "gts lint",
    "fix": "gts fix"
  },
  "keywords": [
    "testea",
    "rewire",
    "mock",
    "NodeJS"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/lamnhan/testea.git"
  },
  "bugs": {
    "url": "https://github.com/lamnhan/testea/issues"
  },
  "dependencies": {
    "@lamnhan/ayedocs": "^1.0.0",
    "@types/marked": "^1.1.0",
    "chalk": "^4.1.0",
    "commander": "^6.1.0",
    "fs-extra": "^9.0.1",
    "recursive-readdir": "^2.2.2",
    "rewiremock": "^3.14.3",
    "sinon": "^9.2.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2.13",
    "@types/fs-extra": "^9.0.1",
    "@types/mocha": "^8.0.3",
    "@types/node": "^14.11.8",
    "@types/recursive-readdir": "^2.2.0",
    "@types/sinon": "^9.0.8",
    "chai": "^4.2.0",
    "coveralls": "^3.1.0",
    "gts": "^3.0.1",
    "mocha": "^8.1.3",
    "nyc": "^15.1.0",
    "typescript": "^4.0.3"
  }
}
